fix_permissions() {
	setcap cap_sys_rawio,cap_sys_resource+ep /usr/bin/darlingserver
	setcap cap_sys_rawio,cap_sys_resource+ep /usr/libexec/darling/usr/libexec/darling/mldr
	setcap cap_sys_rawio,cap_sys_resource+ep /usr/libexec/darling/usr/libexec/darling/mldr32
}

post_install() {
	fix_permissions
}

post_upgrade() {
	fix_permissions
}
